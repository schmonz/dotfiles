.ifdef BSD_PKG_MK	# begin pkgsrc settings

_LOGICALBASE=		/opt/pkg		# symlink points to LOCALBASE
_LOCALPATH=		/opt/.pkg-		# LOCALBASE is here somewhere

.if !defined(VINTAGE)
VINTAGE!=		( readlink -f ${_LOGICALBASE} \
				| sed -e 's|^${_LOCALPATH}||' )
.endif

_PHYSICALBASE=		${_LOCALPATH}${VINTAGE}
LOCALBASE=		${_PHYSICALBASE}

PKG_DBDIR=		${LOCALBASE}/pkgdb

# XXX schmonz 20161030:
# pkg_comp hangs while configuring cwrappers
USE_CWRAPPERS=		no
#ACCEPTABLE_LICENSES+=	gnu-gpl-v3 lame-license artistic-2.0
ACCEPTABLE_LICENSES+=	djb-nonlicense hydra-license php-license vim-license
ACCEPTABLE_LICENSES+=	erlang-public-license

ALLOW_VULNERABLE_PACKAGES=	# defined

LOCALPATCHES=		${PKGSRCDIR}/localpatches

PKGSRC_KEEP_BIN_PKGS=	yes

PREFER_PKGSRC=		openssl

PKG_DEFAULT_OPTIONS=	ssl tls -inet6 -sasl -x11 -fam -kerberos -gssapi
PKG_OPTIONS.checkpassword+=	checkpassword-suid
PKG_OPTIONS.ikiwiki+=	git ikiwiki-search imagemagick l10n
PKG_OPTIONS.lighttpd+=	-ssl geoip
PKG_OPTIONS.mess822+=	sasl
PKG_OPTIONS.mutt+=	mutt-hcache mutt-smtp sasl # mutt-sidebar
PKG_OPTIONS.pari+=	-doc
PKG_OPTIONS.php56+=	readline
PKG_OPTIONS.roundcube+=	nginx sqlite
PKG_OPTIONS.qmail+=	qmail-netqmail qmail-bigdns qmail-realrcptto \
			qmail-viruscan syncdir -tls
PKG_OPTIONS.qmail-run+=	sasl
PKG_OPTIONS.spamdyke+=	-tls
PKG_OPTIONS.p5-Authen-SASL+=	-gssapi

PKG_GID.qmail=		1002
PKG_GID.nofiles=	1001
PKG_UID.alias=		1006
PKG_UID.qmaild=		1007
PKG_UID.qmaill=		1008
PKG_UID.qmailp=		1009
PKG_UID.qmailq=		1010
PKG_UID.qmailr=		1011
PKG_UID.qmails=		1012

PKG_RCD_SCRIPTS=	yes
PKG_SYSCONFBASE=	/etc
PKG_DEVELOPER=		yes

PHP_VERSION_DEFAULT=	56
PYTHON_VERSION_DEFAULT=	35

QMAILDIR=		${LOCALBASE}/varqmail

PKGSRC_SETENV=		${SETENV} -i

.endif			# end pkgsrc settings
