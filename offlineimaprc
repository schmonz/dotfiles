[general]
ui = ttyui
accounts = Schmonz
fsync = False

[Account Schmonz]
localrepository = Schmonz-Local
remoterepository = Schmonz-Remote
status_backend = sqlite
maxage = 1000

[Repository Schmonz-Local]
type = Maildir
localfolders = ~/Gmaildirs/schmonz-schmonz.com
nametrans = lambda folder: {'Drafts':  '[Gmail]/Drafts',
                            'Sent':    '[Gmail]/Sent Mail',
                            'Flagged': '[Gmail]/Starred',
                            'Trash':   '[Gmail]/Trash',
                            'AllMail': '[Gmail]/All Mail',
                            }.get(folder, folder)

[Repository Schmonz-Remote]
maxconnections = 1
type = Gmail
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
remoteuser = schmonz
realdelete = yes
nametrans = lambda folder: {'[Gmail]/Drafts':    'Drafts',
                            '[Gmail]/Sent Mail': 'Sent',
                            '[Gmail]/Starred':   'Flagged',
                            '[Gmail]/Trash':     'Trash',
                            '[Gmail]/All Mail':  'AllMail',
                            }.get(folder, folder)
folderfilter = lambda folder: folder in ['[Gmail]/All Mail',
                                         ]
