# System-wide .profile for sh(1)

if [ -x /usr/libexec/path_helper ]; then
	eval `/usr/libexec/path_helper -s`
fi

if [ "${BASH-no}" != "no" ]; then
	[ -r /etc/bashrc ] && . /etc/bashrc
fi

LESS=FRSX; export LESS
LESSOPEN="| src-hilite-lesspipe.sh %s"; export LESSOPEN
LC_CTYPE=en_US.UTF-8; export LC_CTYPE
LC_ALL=en_US.UTF-8; export LC_ALL

CLICOLOR=1; export CLICOLOR
LSCOLORS=gxfxbEaEBxxEhEhBaDaCaD; export LSCOLORS
COLORTERM=1; export COLORTERM

JAVA_HOME=$(/usr/libexec/java_home); export JAVA_HOME
SCALA_HOME=/opt/scala; export SCALA_HOME
GRADLE_HOME=/opt/gradle-2.12; export GRADLE_HOME

make()
{
	local _MK
	_MK=mk/bsd.pkg.mk
	if [ -f ../../$_MK -o -f ../$_MK -o -f $_MK ]; then
		bmake "$@"
	else
		/usr/bin/make "$@"
	fi
}
